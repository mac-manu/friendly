
<div class="container-fluid">
    <p id="notice"><%= notice %></p>

    <h1>Listing Posts</h1>
    <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.description.html_safe %>

            <td>
        <%= link_to 'Show', post, class: 'btn btn-primary btn-xs' %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-xs' %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
          </td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Post', new_post_path, class: 'btn' %>

</div>


<br>

