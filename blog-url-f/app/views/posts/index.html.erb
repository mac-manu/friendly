
<div class="container-fluid">
    <p id="notice"><%= notice %></p>

    <h1><%= t"title" %></h1>
    <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= t"titulo" %></th>
        <th><%= t"description" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.description.html_safe %></td>
        </tr>
        <td></td>
        <td>
            <div class="btn-group" role="group" >
              <%= link_to 'Show', post, class: 'btn btn-primary btn-xs' %>
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-xs' %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
            </div>
        </td>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Post', new_post_path, class: 'btn' %>

</div>


<br>

